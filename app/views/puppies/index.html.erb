<p id="notice"><%= notice %></p>

<h1>Listing Puppies</h1>

<%= link_to 'Only show old puppies', puppies_path(age: 7) %>

<%= form_tag '/search' do %>
<div class="filed">
  <%= label_tag :name %><br>
  <%= text_field_tag :name %>
</div>
<div class="actions">
  <%= submit_tag 'Search' %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Years</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puppies.each do |puppy| %>
      <tr>
        <td><%= puppy.name %></td>
        <td><%= puppy.years %></td>
        <td><%= puppy.color %></td>
        <td><%= link_to 'Show', puppy %></td>
        <td><%= link_to 'Edit', edit_puppy_path(puppy) %></td>
        <td><%= link_to 'Destroy', puppy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Puppy', new_puppy_path %>
